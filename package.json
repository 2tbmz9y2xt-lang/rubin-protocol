{
  "name": "rubin-protocol-tooling",
  "private": true,
  "version": "0.0.0",
  "scripts": {
    "spec:html": "node scripts/spec/build-spec-html.mjs",
    "spec:diff": "node scripts/spec/gen-spec-diff.mjs",
    "spec:explain": "node scripts/spec/spec-explainer.mjs",
    "spec:watch": "node scripts/spec/watch-spec.mjs",
    "spec:all": "npm run spec:html && npm run spec:diff && npm run spec:explain",
    "lint": "eslint 'scripts/**/*.mjs' 'scripts/**/*.js'",
    "lint:fix": "eslint 'scripts/**/*.mjs' 'scripts/**/*.js' --fix",
    "format": "prettier --write 'scripts/**/*.mjs' 'scripts/**/*.js'",
    "format:check": "prettier --check 'scripts/**/*.mjs' 'scripts/**/*.js'"
  },
  "dependencies": {
    "marked": "^12.0.2"
  },
  "devDependencies": {
    "@eslint/js": "^10.0.1",
    "eslint": "^10.0.0",
    "eslint-config-prettier": "^10.1.8",
    "prettier": "^3.8.1"
  }
}
